
<% if user_signed_in? %>
  <div>
    <strong>Name :</strong>
    <%= @appointment.old_salt.full_name %>
  </div>
<%elsif old_salt_signed_in? %>
  <div>
  <strong>User Name :</strong>
    <%= @appointment.user.full_name %>
  </div>
  <div>
  <strong>User Type :</strong>
    <%= @appointment.user.user_type %>
  </div>
<% end %>

<div>
  <strong>Date :</strong>
  <%= @appointment.requested_date %>
</div>

<div>
  <strong>Time :</strong>
  <%= @appointment.requested_time.strftime("%H:%M") %>
</div>

<div>
  <strong>Location :</strong>
  <%= @appointment.location %>
</div>

<div>
  <strong>Status :</strong>
  <%= @appointment.status %>
</div>

<div>
  <strong>Type :</strong>
  <%= @appointment.request_type.titleize %>
</div>

<div>
  <strong>Request Note :</strong>
  <%= @appointment.note %>
</div>
