<div class="content">
  <div class="container-fluid">
    <%= render partial: 'shared/errors', locals: {resource: @appointment} %>
    <div class="row">
      <div class="col-md-11">
        <div class="card">
          <div class="header">
            <h4 class="title">Bank Account</h4>
            <p class="category">Details</p>
          </div>
          <div class="content">
            <%= form_for [@old_salt, @appointment] do |f| %>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :requested_date, "Apointment Date" %>
                    <%= f.date_field :requested_date, required: :true, class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :requested_time, "Apointment Time" %>
                    <div class="form-control">
                      <%= f.time_select :requested_time, {ampm: :true}, required: :true %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :location %>
                    <%= f.text_field :location, required: :true, class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :request_type %>
                    <div class="form-control">
                      <%= f.radio_button(:request_type, :player_analysis, required: :true,
                                          id: :appointment_player_analysis) %>
                      <%= f.label (:player_analysis) %>
                      <%= f.radio_button(:request_type, :private_training,
                                          id: :appointment_private_training) %>
                      <%= f.label (:private_training) %>
                      <%= f.radio_button(:request_type, :coaching_training,
                                          id: :appointment_coaching_training) %>
                      <%= f.label(:coaching_training) %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.label :note %><br>
                    <%= f.text_area :note, class: "form-control" %>
                  </div>
                </div>
              </div>

              <%= submit_tag 'Send', class: 'btn btn-info btn-fill pull-right' %>
              <div class="clearfix"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
