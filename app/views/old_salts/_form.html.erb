<%= form_for current_old_salt do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= render_profile_picutre(current_old_salt, '100x100') %>
        <%= f.file_field :profile_picture, accept: 'iamge/jpeg', class: "form-group" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :phone_no %>
        <%= f.text_field :phone_no, class: "form-control" %>
      </div>
       <div class="form-group">
        <%= f.label :date_of_birth %><br>
        <%= f.date_field :date_of_birth, class: "form-control" %>
      </div>
    </div>
  </div>

  <%= f.submit 'Update Profile', class: "btn btn-info btn-fill pull-right" %>
  <div class="clearfix"></div>
<% end %>
