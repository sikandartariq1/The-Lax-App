<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="header">
            <h4 class="title">Payment</h4>
            <p class="category">Requests</p>
          </div>
          <div class="content table-responsive table-full-width">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Date</th>
                  <th>Amount</th>
                  <th>Status</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <%= render @payments %>
              </tbody>
            </table>
          </div>
          <div class="pull-right text-info">
            <%= paginate @payments %>
            <%= page_entries_info @payments %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
