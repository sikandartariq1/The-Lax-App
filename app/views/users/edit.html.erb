<div class="content">
  <div class="container-fluid">
    <%= render "shared/errors", resource: @user %>
    <div class="row">
      <div class="col-md-10">
        <div class="card">
          <div class="header">
            <h4 class="title">Edit Login Details</h4>
          </div>
          <div class="content">
            <%= form_for @user do |f| %>

              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, required: :true, class: "form-control" %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <%= f.label :password_confirmation %>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                  </div>
                </div>
              </div>

              <%= f.submit "Update Details", class: "btn btn-info btn-fill pull-right" %>
              <div class="clearfix"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
