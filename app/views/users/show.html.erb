<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        <div class="card card-user">
          <div class="image">
            <img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=400&q=75&w=500" alt="..."/>
          </div>
          <div class="content">
            <div class="author">
              <a href="#">
                <%= render_profile_picutre_with_class(@user, '100x100', 'avatar border-gray') %>
                <h4 class="title"><%= @user.full_name %>
                  <sub><%= @user.user_type %></sub><br>
                  <small><%= @user.email %></small>
                </h4>
              </a>
            </div>
              <hr>
              <p class="description text-center">
                <small>
                  Date of Birth: <%= @user.date_of_birth %><br>
                  Phone No: <%= @user.phone_no %>
                </small>
              </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
